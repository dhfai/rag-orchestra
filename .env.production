# Production Environment Configuration
# ===================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false
LOG_LEVEL=warning

# Session Configuration
SESSION_TIMEOUT=7200
MAX_SESSIONS=5000
SESSION_CLEANUP_INTERVAL=600

# Processing Configuration
MAX_CONCURRENT_PROCESSING=20
PROCESSING_TIMEOUT=3600
RAG_DEFAULT_STRATEGY=advanced

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rag_production
DATABASE_ECHO=false
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=10

# Vector Database Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMADB_PERSIST_DIRECTORY=/var/lib/rag/chromadb

# LLM API Keys Configuration (REQUIRED FOR PRODUCTION)
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.5
OPENAI_MAX_TOKENS=4000

GOOGLE_API_KEY=your-production-google-api-key
GOOGLE_MODEL=gemini-pro
GOOGLE_TEMPERATURE=0.5

ANTHROPIC_API_KEY=your-production-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.5

GROQ_API_KEY=your-production-groq-api-key
GROQ_MODEL=llama3-70b-8192

# Embedding Models API
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_API_KEY=${OPENAI_API_KEY}

# Security Configuration (REQUIRED FOR PRODUCTION)
SECRET_KEY=your-super-secure-secret-key-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256
BCRYPT_ROUNDS=14

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/var/log/rag/backend.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=60
WS_MAX_MESSAGE_SIZE=2097152
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=20

# RAG Configuration
RAG_CHUNK_SIZE=1500
RAG_CHUNK_OVERLAP=300
RAG_MAX_SOURCES=20
RAG_SIMILARITY_THRESHOLD=0.75

# File Processing Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.docx,.pdf,.txt,.csv
UPLOAD_DIR=/var/lib/rag/uploads
TEMP_DIR=/tmp/rag

# Performance Configuration
ASYNC_POOL_SIZE=50
REQUEST_TIMEOUT=600
RESPONSE_CACHE_TTL=7200

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
